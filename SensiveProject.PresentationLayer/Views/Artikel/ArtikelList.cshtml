@model List<Artikel>

@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
    <table class="table table-hover ">
        <tr>
            <th>#</th>
            <th>Baslik</th>
            <th>Kategori</th>
            <th>Yazar</th>
            <th>Tarih</th>
            <th>Detaylar</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ArtikelId</td>
                <td>@item.ArtikelTitle</td>
                <td>@item.CategoryId</td>
                <td>@item.AppUserId</td>
                <td>@item.CreatedDate.ToString("dd-MMM-yyyy")</td>
                <td><a href="#" class="btn btn-warning">Detaylar</a></td>
                <td><a href="#" class="btn btn-danger">Sil</a></td>
                <td><a href="#" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Artikel/CreateArtikel" class="btn btn-primary">Yeni Makale Ekle</a>
</div>

